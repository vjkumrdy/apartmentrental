<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.findinganapartment">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SlashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.RegistrationActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.LandLordDashboardActivity" />
        <activity android:name=".activities.AdminDashBoardActivity" />
        <activity android:name=".activities.AdminLoginActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.AddPropertyActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.LandLordEditProfileActivity" />
        <activity android:name=".activities.ForgotPasswordActivity" />
        <activity
            android:name=".activities.EditYourProfileActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.AllPropertiesActivity" />
        <activity android:name=".activities.AdminEditProfileActivity" />
        <activity android:name=".activities.MyPropertiesActivity" />
        <activity
            android:name=".activities.EditMyPropertiesActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.SearchPropertiesActivity" />
        <activity android:name=".activities.DetailsOfProperties" />
        <activity android:name=".activities.ImageUploadActivity" />
    </application>


</manifest>